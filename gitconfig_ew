[user]
    name = Julien Miotte
    email = jmiotte@edenwall.com
[core]
    editor = vim
    pager = most
[color]
    diff = auto
    pager = true
    ui = auto
[alias]
    pullrebase = pull --rebase
    ci = commit -v -uno
    wu = log --stat origin/master..@{0}
    st = status
    up = pull --rebase
    co = checkout
    in = !git fetch origin && git log --stat HEAD..origin/master
    create-remote-branch = "!f() { git push origin origin:refs/heads/$1 && git fetch origin && git checkout --track -b $1 origin/$1; }; f"
    delete-remote-branch = "!f() { git push origin :heads/$1; }; f"
[merge]
    tool = vimdiff
